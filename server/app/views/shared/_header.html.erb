<div class="navbar navbar-inverse navbar-fixed-top">
  <div class="navbar-inner">
    <form class="navbar-search pull-right" action="<%= request.path %>" method="get">
      <input type="text" class="search-query" placeholder="Busque" name="busqueda" value="<%= params[:busqueda] %>">
    </form>
    <ul class="nav pull-right">

      <% if usuario_signed_in? %>
        <% unless @is_home %>
          <li><%= link_to 'Formule una pregunta', new_pregunta_path %></li>
        <% end %> 
        <li class="dropdown">
          <a href="#" id="registrese" class="dropdown-toggle" data-toggle="dropdown" role="button"><%= current_usuario.nombre %> <b class="caret"></b></a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="registrese">
            <li><%= link_to 'Vea su Perfil', usuario_path(current_usuario) %></li>
            <li><%= link_to 'Salga', usuarios_salir_path %></li>
          </ul>
        </li>
      <% else %>
        <li class="dropdown">
          <a href="#" id="registrese" class="dropdown-toggle" data-toggle="dropdown" role="button">Ingrese <b class="caret"></b></a>
          <ul class="dropdown-menu" role="menu" aria-labelledby="registrese">
            <li><%= link_to 'Ingrese', new_usuario_session_path %></li>
            <li><%= link_to 'Regístrese', usuarios_registrar_path %></li>
          </ul>
        </li>
      <% end %> 


    </ul>
    <% unless @is_home %>
      <a class="brand" href="/">La República Ciudadana</a>
    <% end %>
  </div>
</div>
