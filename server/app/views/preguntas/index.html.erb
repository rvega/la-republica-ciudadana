<!--===============-->
<!--LISTA PREGUNTAS-->
<!--===============-->
<ul id="preguntas-lista">
  <% @preguntas.each do |pregunta| %>
    <li>
      <div class="num-respuestas" data-toggle="tooltip" title="Esta pregunta tiene 88 respuestas.">
        88<i class="icon-ok"></i>
      </div>
      <div class="num-comentarios" data-toggle="tooltip" title="Esta pregunta tiene 88 comentarios.">
        00<i class="icon-comment"></i>
      </div>
      <h3>
        <a href="<%= pregunta_path(pregunta) %>"><span class="muted">
          ¿Qué puedo hacer como ciudadano colombiano para</span> <%= pregunta.topico %>
          <span class="muted">?</span>
        </span></a>
      </h3>
      <p class="tags">
        <% pregunta.etiquetas.each do |e| %>
          <span data-toggle="tooltip" title="Esta pregunta ha sido etiquetada <%= e.etiqueta %>." class="label"><a href="#"><%= e.etiqueta %></a></span>
        <% end %>
      <hr>
    </li>
  <% end %>
</ul>

