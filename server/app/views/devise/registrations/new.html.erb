<% if resource.errors.any? %>
  <div class="alert alert-error">
    <strong>Atención!</strong>
    <br>Debe corregir los siguientes errores para poder registrarse:
    <ul>
      <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(resource, :as => resource_name, :url => usuario_registration_path, :html=>{:class=>'form-signin'}) do |f| %>
  <h2>Regístrese</h2>

  <p>
    <%= f.text_field :nombre, :autofocus => true, :class=>'input-block-level', :placeholder=>'Nombres' %>
  </p>

  <p>
    <%= f.text_field :email, :class=>'input-block-level', :placeholder=>'Email' %>
  </p>

  <p>
    <%= f.password_field :password, :class=>'input-block-level', :placeholder=>'Contraseña' %>
  </p>

  <p>
    <%= f.password_field :password_confirmation, :class=>'input-block-level', :placeholder=>'Confirme su contraseña'%>
  </p>

  <p>
    <%= f.text_area :descripcion, :class=>'input-block-level', :placeholder=>'Perfil (opcional)', :rows=>4%>
  </p>

  <p>
    <%= f.check_box :acepta_terminos %> Acepto los <a href="/terminos">términos y condiciones de uso</a> <br>de La República Ciudadana.
  </p>

  <p>
    <%= f.submit raw("Regístrese &raquo;"), :class=>'btn btn-primary', :disable_with=>"Enviando..." %>
  </p>

  <p id="links">
    <%= render "devise/shared/links" %>
  </p>
<% end %>

