<%= form_for(resource, :as => resource_name, :url => usuario_registration_path, :html=>{:class=>'form-signin'}) do |f| %>
  <h2>Regístrese</h2>

  <%= devise_error_messages! %>

  <p>
    <%= f.text_field :nombre, :autofocus => true, :class=>'input-block-level', :placeholder=>'Nombres' %>
  </p>

  <p>
    <%= f.email_field :email, :class=>'input-block-level', :placeholder=>'Email' %>
  </p>

  <p>
    <%= f.password_field :password, :class=>'input-block-level', :placeholder=>'Contraseña' %>
  </p>

  <p>
    <%= f.password_field :password_confirmation, :class=>'input-block-level', :placeholder=>'Confirme su contraseña'%>
  </p>

  <p>
    <%= f.submit raw("Regístrese &raquo;"), :class=>'btn btn-primary', :disable_with=>"Enviando..." %>
  </p>

  <p id="links">
    <%= render "devise/shared/links" %>
  </p>
<% end %>

